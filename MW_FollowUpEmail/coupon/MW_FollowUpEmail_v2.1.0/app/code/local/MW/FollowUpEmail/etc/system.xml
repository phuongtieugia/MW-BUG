<?xml version="1.0"?>

<config>

    <tabs>

        <mageworld translate="label">

            <label>Mage World</label>

            <sort_order>100</sort_order>

        </mageworld>

    </tabs>

    <sections>

        <followupemail translate="label" module="followupemail">

            <label>Follow Up Email</label>

            <tab>mageworld</tab>

            <frontend_type>text</frontend_type>

            <sort_order>110</sort_order>

            <show_in_default>1</show_in_default>

            <show_in_website>1</show_in_website>

            <show_in_store>1</show_in_store>

            <groups>                

                <config>

                    <label>General</label>

                    <frontend_type>text</frontend_type>

                    <sort_order>10</sort_order>

                    <show_in_default>1</show_in_default>

                    <show_in_website>1</show_in_website>

                    <show_in_store>1</show_in_store>

                    <fields>						

                        <enabled>

                            <label>Enable Follow Up Email</label>

                            <frontend_type>select</frontend_type>

                            <source_model>adminhtml/system_config_source_yesno</source_model>

                            <sort_order>10</sort_order>

                            <show_in_default>1</show_in_default>

                            <show_in_website>1</show_in_website>

                            <show_in_store>1</show_in_store>

                        </enabled>                      

                        <sender>

                            <label>Default Sender</label>
							
							<comment>Set up default senders under System – Configuration – General – Store Email Addresses</comment>

                            <frontend_type>select</frontend_type>

                            <source_model>followupemail/system_config_sender</source_model>

                            <sort_order>20</sort_order>

                            <show_in_default>1</show_in_default>

                            <show_in_website>1</show_in_website>

                            <show_in_store>1</show_in_store>

                        </sender>
                                          

                        

                        <cartisabandonedafter>

                            <label>Amount of time, cart is considered abandoned after last update (in hours)</label>
							
							<comment>(Use decimals for partial hour. Ex. .25 equals 15 minutes)</comment>

                            <frontend_type>text</frontend_type>

		                    <sort_order>40</sort_order>

		                    <show_in_default>1</show_in_default>

		                    <show_in_website>1</show_in_website>

		                    <show_in_store>1</show_in_store>

                        </cartisabandonedafter>

						

						<dontsendemailhours>

                            <label>Don't send the same email within # of hours</label>

                            <frontend_type>text</frontend_type>

		                    <sort_order>50</sort_order>

		                    <show_in_default>1</show_in_default>

		                    <show_in_website>1</show_in_website>

		                    <show_in_store>1</show_in_store>

                        </dontsendemailhours>
						
						<autocleanqueueemail>

                            <label>Auto-clean 'Sent' emails after # of days</label>

                            <frontend_type>text</frontend_type>

		                    <sort_order>60</sort_order>

		                    <show_in_default>1</show_in_default>

		                    <show_in_website>1</show_in_website>

		                    <show_in_store>1</show_in_store>

                        </autocleanqueueemail>

                                               

                    </fields>

                </config>



                <author_information translate="label">

                    <label>Author</label>

                    <frontend_type>text</frontend_type>

                    <sort_order>60</sort_order>

                    <show_in_default>1</show_in_default>

                    <show_in_website>1</show_in_website>

                    <show_in_store>1</show_in_store>
                  	<comment>
						The Follow Up Email extension is developed and supported by &lt;a target="_blank" href="http://www.mage-world.com/"&gt;www.Mage-World.com&lt;/a&gt;. If you need any support or have any question, please submit a ticket via &lt;a target="_blank" href="http://www.mage-world.com/contacts/"&gt;our Help Desk&lt;/a&gt; or send us an email to &lt;a target="_blank" href="mailto:support@mage-world.com"&gt;support@mage-world.com.&lt;/a&gt;
					</comment>					
                </author_information>

            </groups>           

        </followupemail>

    </sections>

</config>

